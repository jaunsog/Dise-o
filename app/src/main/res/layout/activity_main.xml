<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/TCPbutton"
        android:layout_width="299dp"
        android:layout_height="71dp"
        android:layout_marginBottom="132dp"
        android:onClick="TCPbutton"
        android:text="Enviar TCP"
        android:textColor="#0944F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/UDPbutton"
        android:layout_width="297dp"
        android:layout_height="67dp"
        android:layout_marginBottom="32dp"
        android:onClick="UDPbutton"
        android:text="Enviar UDP"
        android:textColor="#E40808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TCPbutton"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/IP"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="DirecciÃ³n IP Destino "
        android:inputType="textPersonName"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="130dp" />

    <EditText
        android:id="@+id/puerto"
        android:layout_width="333dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="#Puerto Destino"
        android:inputType="textPersonName"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IP" />

</androidx.constraintlayout.widget.ConstraintLayout>